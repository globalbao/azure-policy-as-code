{
  "properties": {
    "displayName": "Alert on appGateway UnhealthyHostcount",
    "policyType": "Custom",
    "mode": "All",
    "description": "Creates a Metric Alert on appGateway for UnhealthyHostcount (Current UnhealthyHostcount of the Application Gateway)",
    "metadata": {
      "category": "Custom",
      "source": "github.com/globalbao/azure-policy-as-code",
      "version": "1.0.0"
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.Network/appGateway",
            "field": "type"
          }
        ]
      },
      "then": {
        "details": {
          "deployment": {
            "properties": {
              "mode": "incremental",
              "parameters": {
                "actionGroupName": {
                  "value": "AlertOperationsGroup"
                },
                "actionGroupRG": {
                  "value": "AzMonitorAlertGroups"
                },
                "resourceLocation": {
                  "value": "[field('location')]"
                },
                "resourceName": {
                  "value": "[field('fullName')]"
                }
              },
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "actionGroupId": {
                    "defaultValue": "[resourceId(parameters('actionGroupRG'), 'Microsoft.Insights/ActionGroups', parameters('actionGroupName'))]",
                    "metadata": {
                      "description": "The ID of the action group that is triggered when the alert is activated or deactivated",
                      "displayName": "actionGroupId"
                    },
                    "type": "string"
                  },
                  "actionGroupName": {
                    "metadata": {
                      "description": "Name of the Action Group",
                      "displayName": "actionGroupName"
                    },
                    "type": "string"
                  },
                  "actionGroupRG": {
                    "metadata": {
                      "description": "Resource Group containing the Action Group",
                      "displayName": "actionGroupRG"
                    },
                    "type": "string"
                  },
                  "resourceId": {
                    "defaultValue": "[resourceId('Microsoft.Network/appGateway', parameters('resourceName'))]",
                    "metadata": {
                      "description": "Resource ID of the resource emitting the metric that will be used for the comparison",
                      "displayName": "resourceId"
                    },
                    "type": "string"
                  },
                  "resourceLocation": {
                    "metadata": {
                      "description": "Location of the resource",
                      "displayName": "resourceLocation"
                    },
                    "type": "string"
                  },
                  "resourceName": {
                    "metadata": {
                      "description": "Name of the resource",
                      "displayName": "resourceName"
                    },
                    "type": "string"
                  }
                },
                "resources": [
                  {
                    "apiVersion": "2018-03-01",
                    "location": "global",
                    "name": "[concat(parameters('resourceName'), '-appGateway_UnhealthyHostcount')]",
                    "properties": {
                      "actions": [
                        {
                          "actionGroupId": "[parameters('actionGroupId')]",
                          "webHookProperties": {}
                        }
                      ],
                      "autoMitigate": true,
                      "criteria": {
                        "allOf": [
                          {
                            "alertSensitivity": "Medium",
                            "criterionType": "DynamicThresholdCriterion",
                            "dimensions": [
                              {
                                "name": "BackendSettingsPool",
                                "operator": "Include",
                                "values": ["*"]
                              }
                            ],
                            "failingPeriods": {
                              "minFailingPeriodsToAlert": 1,
                              "numberOfEvaluationPeriods": 2
                            },
                            "metricName": "UnhealthyHostcount",
                            "metricNamespace": "Microsoft.Network/appGateway",
                            "name": "Metric1",
                            "operator": "GreaterThan",
                            "timeAggregation": "Average"
                          }
                        ],
                        "odata.type": "Microsoft.Azure.Monitor.MultipleResourceMultipleMetricCriteria"
                      },
                      "description": "Current UnhealthyHostcount of the Application Gateway",
                      "enabled": true,
                      "evaluationFrequency": "PT15M",
                      "scopes": ["[parameters('resourceId')]"],
                      "severity": 3,
                      "targetResourceRegion": "[parameters('resourceLocation')]",
                      "targetResourceType": "Microsoft.Network/appGateway",
                      "windowSize": "PT1H"
                    },
                    "type": "Microsoft.Insights/metricAlerts"
                  }
                ],
                "variables": {}
              }
            }
          },
          "existenceCondition": {
            "allOf": [
              {
                "equals": "Microsoft.Network/appGateway",
                "field": "Microsoft.Insights/metricAlerts/criteria.Microsoft.Azure.Monitor.MultipleResourceMultipleMetricCriteria.allOf[*].metricNamespace"
              },
              {
                "equals": "UnhealthyHostcount",
                "field": "Microsoft.Insights/metricAlerts/criteria.Microsoft.Azure.Monitor.MultipleResourceMultipleMetricCriteria.allOf[*].metricName"
              },
              {
                "equals": "[concat(subscription().id, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/appGateway/', field('fullName'))]",
                "field": "Microsoft.Insights/metricalerts/scopes[*]"
              }
            ]
          },
          "roleDefinitionIds": [
            "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "type": "Microsoft.Insights/metricAlerts"
        },
        "effect": "deployIfNotExists"
      }
    }
  }
}
